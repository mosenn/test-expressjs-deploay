<h2 class="mt-4 mb-3">نظرات</h2>

<% if (comments.length > 0) { %>
  <div class="comments-box">
    <% comments.forEach(comment => { %>
      <div class="card mb-3 border border-primary">
        <div class="card-body">
          <h5 class="card-title">
            <strong><%= comment.full_name %> گفت:</strong>
            <% if (comment.username) { %>
              <small class="text-muted">(@<%= comment.username %>)</small>
            <% } %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= comment.created_at %></h6>
          <p class="card-text"><%= comment.comment_text %></p>
          <p class="card-text">امتیاز: <%= comment.rating %></p>

          <!-- فرم حذف -->
          <form method="POST" action="/shk/hndlComment/delete-comment" class="mt-3" onsubmit="return confirm('آیا از حذف نظر مطمئن هستید؟');">
            <input type="hidden" name="comment_id" value="<%= comment.comment_id %>">
            <input type="hidden" name="shop_id" value="<%= comment.shop_id %>">
            <button type="submit" class="btn btn-danger btn-sm">حذف</button>
          </form>
        </div>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <p class="text-muted">هیچ نظری یافت نشد.</p>
<% } %>
